@page
@model LoginModel

@{
    ViewData["Title"] = @Resources.Views.Common.Login;
}

<h1>@ViewData["Title"]</h1>
<div class="    ">
    <div class="">
        <section>
            <form id="account" method="post">
                
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Email" class="form-control" placeholder="@Resources.Views.Common.Email" />
                    <div class="input-group-append">
                        <span asp-validation-for="Input.Email" ></span>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @* <label asp-for="Input.Password"></label> *@
                    <input asp-for="Input.Password" class="form-control" placeholder="@Resources.Views.Common.Password" />
                    <div class = "input-group-append">
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="Col-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">@Resources.Views.Common.Login</button>
                </div>
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">@Resources.Views.Common.RegisterNew</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
   
</div>
    
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
