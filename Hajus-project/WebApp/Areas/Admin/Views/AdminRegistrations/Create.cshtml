@model WebApp.ViewModels.RegistrationsCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>@Resources.Views.Common.Create</h1>

<h4>@Resources.Views.Shared._Layout.NavRegistration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Registration.Title" class="control-label"></label>
                <input asp-for="Registration.Title" class="form-control" />
                <span asp-validation-for="Registration.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.Comment" class="control-label"></label>
                <input asp-for="Registration.Comment" class="form-control" />
                <span asp-validation-for="Registration.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Registration.DogId" class="control-label"> @Resources.Domain.Registration.Dog</label>
                <select asp-for="Registration.DogId" class="form-control" asp-items="Model.DogSelectList">
                    <option value="">@Resources.Views.Common.Choose</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Registration.ParticipantId" class="control-label"> @Resources.Domain.Registration.Participant</label>
                <select asp-for="Registration.ParticipantId" class="form-control" asp-items="Model.ParticipantSelectList">
                    <option value="">@Resources.Views.Common.Choose</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Registration.CompetitionId" class="control-label"> @Resources.Domain.Registration.Competition</label>
                <select asp-for="Registration.CompetitionId" class="form-control" asp-items="Model.CompetitionSelectList">
                    <option value="">@Resources.Views.Common.Choose</option>
                </select>
            </div>
                        <div class="form-group">
                            <label asp-for="Registration.SchoolingId" class="control-label"> @Resources.Domain.Registration.Schooling</label>
                            <select asp-for="Registration.SchoolingId" class="form-control" asp-items="Model.SchoolingSelectList">
                                <option value="">@Resources.Views.Common.Choose</option>
                            </select>
                        </div>
            <div class="form-group">
                <label asp-for="Registration.ShowId" class="control-label">@Resources.Domain.Registration.Show</label>
                <select asp-for="Registration.ShowId" class="form-control" asp-items="Model.ShowSelectList">
                    <option value="">@Resources.Views.Common.Choose</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Common.Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
