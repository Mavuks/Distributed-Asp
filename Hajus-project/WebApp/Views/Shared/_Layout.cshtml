@using System.Globalization
@using Domain.Identity
@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ringokris</title>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute"
              crossorigin="anonymous"
              integrity="sha256-eSi1q2PG6J7g7ib17yAaWMcrr5GrtohYChqibrV7PBE="/>
    </environment>
    @* <link rel="stylesheet" href="~/css/site.css" /> *@
    <link rel="stylesheet" href="~/AdminLTE/dist/css/adminlte.min.css" />
    <link rel="stylesheet" href="~/css/site.css"/>
    
    @RenderSection("CSS", required: false)
    @RenderSection("HeaderScripts", required: false)
</head>
<body>

<header>

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand bg-primary-gradient navbar-light border-bottom" >
        <!-- Left navbar links -->
        <ul class="navbar-nav">
           @if(SignInManager.IsSignedIn(User))
           {


            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Resources.Views.Shared._Layout.NavHome</a>
            </li>
@*             <li class="nav-item d-none d-sm-inline-block"> *@
@*                 <a class="nav-link " asp-area="" asp-controller="Breeds" asp-action="Index">@Resources.Views.Shared._Layout.NavBreed</a> *@
@*             </li> *@
            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link " asp-area="" asp-controller="Competitions" asp-action="Index">@Resources.Views.Shared._Layout.NavCompetition</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link " asp-area="" asp-controller="Dogs" asp-action="Index">@Resources.Views.Shared._Layout.NavDog</a>
            </li>
@*             <li class="nav-item d-none d-sm-inline-block"> *@
@*                 <a class="nav-link " asp-area="" asp-controller="Locations" asp-action="Index">@Resources.Views.Shared._Layout.NavLocation</a> *@
@*             </li> *@
@*             <li class="nav-item d-none d-sm-inline-block"> *@
@*                 <a class="nav-link " asp-area="" asp-controller="Materials" asp-action="Index">@Resources.Views.Shared._Layout.NavMaterial</a> *@
@*             </li> *@
            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link " asp-area="" asp-controller="Participants" asp-action="Index">@Resources.Views.Shared._Layout.NavParticipant</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link " asp-area="" asp-controller="Registrations" asp-action="Index">@Resources.Views.Shared._Layout.NavRegistration</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link " asp-area="" asp-controller="Schoolings" asp-action="Index">@Resources.Views.Shared._Layout.NavSchooling</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link " asp-area="" asp-controller="Shows" asp-action="Index">@Resources.Views.Shared._Layout.NavShow</a>
            </li>
              
           }
               else
    {
        <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">@Resources.Views.Shared._Layout.NavHome</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link " asp-area="" asp-controller="News" asp-action="Index">@Resources.Views.Shared._Layout.News</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a class="nav-link " asp-area="" asp-controller="Puppies" asp-action="Index">@Resources.Views.Shared._Layout.Puppies</a>
        </li>

    }



        </ul>

   
         <!-- Right navbar links --> 
         <ul class="navbar-nav ml-auto"> 
            <partial name="_LoginPartial"/> 
         </ul> 
     </nav> 
     <!-- /.navbar --> 


</header>
<div class="container">
    <partial name="_CookieConsentPartial"/>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        <div class="row">
            <div class="col-md-4">&copy; 2019 - Ringokris - <a asp-area="" asp-controller="Home" asp-action="Privacy">@Resources.Views.Shared._Layout.Privacy</a></div>
            <div class="col-md-4">UICulture: @CultureInfo.CurrentUICulture.Name Culture: @CultureInfo.CurrentUICulture.Name</div>
            <div class="col-md-4"><partial name="_LanguageSelectionPartial"/></div>
        </div>
    </div>
</footer>

<environment include="Development">
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
</environment>
<environment exclude="Development">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
            asp-fallback-test="window.jQuery"
            crossorigin="anonymous"
            integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=">
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"
            asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"
            asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
            crossorigin="anonymous"
            integrity="sha256-E/V4cWE4qvAeO5MOhjtGtqDzPndRO1LBk8lJ/PR7CA4=">
    </script>
</environment>
<script src="~/js/site.js" asp-append-version="true"></script>

@RenderSection("Scripts", required: false)
</body>
</html>
