@model WebApp.ViewModels.ShowCreateViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>@Resources.Views.Common.Edit</h1>

<h4>@Resources.Views.Shared._Layout.NavShow</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Show.Title" class="control-label"></label>
                <input asp-for="Show.Title" class="form-control" />
                <span asp-validation-for="Show.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Show.Comment" class="control-label"></label>
                <input asp-for="Show.Comment" class="form-control" />
                <span asp-validation-for="Show.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Show.Start" class="control-label"></label>
                <input asp-for="Show.Start" class="form-control" />
                <span asp-validation-for="Show.Start" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Show.End" class="control-label"></label>
                <input asp-for="Show.End" class="form-control" />
                <span asp-validation-for="Show.End" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Show.LocationId" class="control-label"></label>
                <select asp-for="Show.LocationId" class="form-control" asp-items="Model.LocationSelectList"></select>
                <span asp-validation-for="Show.LocationId" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Show.Id" />
            <div class="form-group">
                <input type="submit" value="@Resources.Views.Common.Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@Resources.Views.Common.BackToList</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
